// room script file
function fObject_open_close(Object *theObject, int open_img,  int closed_img,  bool verb_is_open)
{
  if (verb_is_open)
  {
    if (theObject.GetProperty("closed")) 
        {
          theObject.Graphic = open_img;
          theObject.SetProperty("closed", 0);
        }
    }
  else
  {
    if (!theObject.GetProperty("closed")) 
        {
          theObject.Graphic = closed_img;
          theObject.SetProperty("closed", 1);
        }
    }

  
}


function oHbiSchublade_AnyClick(Object *theObject, CursorMode mode)
{
    if(Verbs.UsedAction(eGA_Close)) {
      // player.Walk(oHbiSchublade.X, oHbiSchublade.Y, eBlock);
      fObject_open_close(theObject, 255,  256,  false);
      
    }
    else if(Verbs.UsedAction(eGA_Open)) {
      //player.Say("Ich schau mir das mal an");
      //player.Walk(oHbiSchublade.X, oHbiSchublade.Y, eBlock);
      fObject_open_close(theObject, 255,  256,  true);
    }
}


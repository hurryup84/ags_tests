function oHbiSchubladeZu_AnyClick(Object *theObject, CursorMode mode)
{
    if(Verbs.UsedAction(eGA_Open)) {
      player.Say("Ich schau mir das mal an");
      player.Walk(oHbiSchubladeOffen.X, oHbiSchubladeOffen.Y, eBlock);
      oHbiSchubladeOffen.Visible = true;
      oHbiSchubladeZu.Visible = false;
    }

}

function oHbiSchubladeZu_Interact(Object *theObject, CursorMode mode)
{

}

function oHbiSchubladeOffen_AnyClick(Object *theObject, CursorMode mode)
{
    if(Verbs.UsedAction(eGA_Close)) {
      player.Walk(oHbiSchubladeOffen.X, oHbiSchubladeOffen.Y, eBlock);
      oHbiSchubladeOffen.Visible = false;
      oHbiSchubladeZu.Visible = true;
    }

}
